<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/touch_selector_dark"
    android:minHeight="?android:attr/listPreferredItemHeight"
    android:padding="10dp"
    android:orientation="horizontal"
    android:id="@+id/widget_list_item"
    >
    <TextView
        android:id="@+id/stock_symbol"
        style="@style/StockSymbolTextStyle"
        android:gravity="start|center_vertical"
        android:contentDescription="@string/content_description_ticker"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text="AAPL"
        />
    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:gravity="end"
        >
        <TextView
            android:id="@+id/bid_price"
            style="@style/BidPriceTextStyle"
            android:paddingStart="10sp"
            android:contentDescription="@string/content_description_bidprice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingEnd="10sp"
            tools:text="1000.00"
            />
        <TextView
            android:id="@+id/change"
            style="@style/PercentChangeTextStyle"
            android:paddingRight="3dp"
            android:paddingStart="3dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="3dp"
            android:contentDescription="@string/content_description_change_in_price"
            android:paddingEnd="3dp"
            tools:text="100%"
            />
    </LinearLayout>
</LinearLayout>